{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
  <div class="connection-color-container">

    <div class="separator-connection-container">
      <img src="{{ asset('img/vector-img/Vector2.png') }}" class="connection-separator">
    </div>

    <div class="connection-container">
      <div class="connection-header">
        <img src="{{ asset('img/Navbar-img/logo.jpg') }}" class="connection-logo-img">
        <div class="connection-logo-brand-name">Mballa's food</div>
        <img src="{{ asset('img/Navbar-img/logo.jpg') }}" class="connection-logo-img-2">
      </div>

      <div class="connection-text-container">
        <span class="line-decoration"></span>
        <span class="connection-text">Connectez-vous</span>
        <span class="line-decoration"></span>
      </div>

      {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      {% if app.user %}
        <div class="connection-already">
          Vous êtes connecté en tant que {{ app.user.userIdentifier }} –
          <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
      {% endif %}

      <form method="post" class="connection-input" action="{{ path('app_login') }}">
        <div class="input-container">
          <label for="username" class="label-connection">E-mail</label>
          <input type="email" value="{{ last_username }}" name="_username" id="username"
            class="form-control input-connection-form"
            autocomplete="email" required autofocus
          >

          <label for="password" class="label-connection">Mot de passe</label>
          <input type="password" name="_password" id="password"
            class="form-control input-connection-form"
            autocomplete="current-password" required
          >
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary btn-connection" type="submit">
          Se connecter
        </button>
      </form>

      <div class="account-container">
        <a href="#" class="account-links">Créer un compte</a>
        <a href="#" class="account-links">Mot de passe oublié</a>
      </div>
    </div>

    
    <div class="separator-connection-container">
      <img src="{{ asset('img/vector-img/Vector2.png') }}" class="connection-separator2">
    </div>

  </div>
{% endblock %}

